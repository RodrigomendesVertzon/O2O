@model O2OUI.Models.MySqlConector

@{
    ViewData["Title"] = "Create";
}

<div class="formulario">
    <h6>Novo Conector MYSQL</h6>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" class="form border rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="col-form-label"></label>
                    <input asp-for="Nome" class="form-control form-control-sm" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ip" class="col-form-label"></label>
                    <input asp-for="Ip" class="form-control form-control-sm" />
                    <span asp-validation-for="Ip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Porta" class="col-form-label"></label>
                    <input asp-for="Porta" class="form-control form-control-sm" />
                    <span asp-validation-for="Porta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NomeDoBanco" class="control-label">Nome do Banco</label>
                    <input asp-for="NomeDoBanco" class="form-control form-control-sm" />
                    <span asp-validation-for="NomeDoBanco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Usuario" class="col-form-label"></label>
                    <input asp-for="Usuario" class="form-control form-control-sm" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="col-form-label"></label>
                    <input type="password" asp-for="Senha" class="form-control form-control-sm" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Identificador" class="col-form-label"></label>
                    <input asp-for="Identificador" class="form-control form-control-sm" />
                    <span asp-validation-for="Identificador" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-outline-success btn-sm" />
                    <a asp-action="Index" class="btn btn-outline-dark btn-sm">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
