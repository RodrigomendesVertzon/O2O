@model O2OUI.Models.Seguranca.PermissaoDeAcesso

@{
    ViewData["Title"] = "Atualizar" + Model.IpPermitido;
}

<div class="formulario">
    <h6>Atualizar @Model.IpPermitido</h6>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" class="form border rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="IpPermitido" class="col-form-label">Ip Permitido</label>>
                    <input asp-for="IpPermitido" class="form-control form-control-sm" />
                    <span asp-validation-for="IpPermitido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-outline-success btn-sm" />
                    <a asp-action="Index" class="btn btn-outline-dark btn-sm">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
