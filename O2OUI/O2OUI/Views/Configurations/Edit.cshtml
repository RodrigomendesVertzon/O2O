@model O2OUI.Models.Configuration

@{
    ViewData["Title"] = "Atualizar";
}

<div class="formulario">
    <h6>Atualizar @Model.ConfigLabel.Label</h6>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" class="form border rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="IdCL" class="col-form-label">Configuração</label>
                    <select asp-for="IdCL" class="form-control form-control-sm" asp-items="ViewBag.IdCL"></select>
                    <span asp-validation-for="IdCL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Valores" class="col-form-label"></label>
                    <input asp-for="Valores" class="form-control form-control-sm" />
                    <span asp-validation-for="Valores" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-outline-success btn-sm" />
                    <a asp-action="Index" class="btn btn-outline-dark btn-sm">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
