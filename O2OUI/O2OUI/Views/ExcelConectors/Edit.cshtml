@model O2OUI.Models.ExcelConector

@{
    ViewData["Title"] = "Atualizar" + Model.Nome;
}


<div class="formulario">
    <h6>Atualizar @Model.Nome</h6>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ip" class="control-label"></label>
                    <input asp-for="Ip" class="form-control" />
                    <span asp-validation-for="Ip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiretorioCompartilhado" class="control-label">Diretório Compartilhado</label>
                    <input asp-for="DiretorioCompartilhado" class="form-control" />
                    <span asp-validation-for="DiretorioCompartilhado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NomeArquivo" class="control-label">Nome do Arquivo</label>
                    <input asp-for="NomeArquivo" class="form-control" />
                    <span asp-validation-for="NomeArquivo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sheet" class="control-label"></label>
                    <input asp-for="Sheet" class="form-control" />
                    <span asp-validation-for="Sheet" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Usuario" class="control-label"></label>
                    <input asp-for="Usuario" class="form-control" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input type="password" asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Identificador" class="control-label"></label>
                    <input asp-for="Identificador" class="form-control" />
                    <span asp-validation-for="Identificador" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-outline-success btn-sm" />
                    <a asp-action="Index" class="btn btn-outline-dark btn-sm">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}