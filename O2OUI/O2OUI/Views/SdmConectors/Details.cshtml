@model SdmViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div class="container">
    @if (TempData["Confimacao"] != null)
    {
        <h6 class="alert-success">@TempData["Confirmacao"]</h6>
    }
    <h4>SdmConector</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SdmConector.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SdmConector.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SdmConector.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SdmConector.Url)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SdmConector.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SdmConector.Usuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SdmConector.Identificador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SdmConector.Identificador)
        </dd>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.SdmConector.Id" class="btn btn-outline-success btn-sm">Editar</a> |
        <a asp-action="Index" class="btn btn-outline-dark btn-sm">Voltar</a>
    </div>
    <hr />
    <a asp-action="CreateD" asp-controller="SdmStatus" class="btn btn-outline-success btn-sm">Criar novo Status</a>
    <hr />
    @await Html.PartialAsync("AbertoListD", Model)
    @await Html.PartialAsync("ReabertoListD", Model)
    @await Html.PartialAsync("FechadoListD", Model)
    @await Html.PartialAsync("ResolvidoListD", Model)
</div>


